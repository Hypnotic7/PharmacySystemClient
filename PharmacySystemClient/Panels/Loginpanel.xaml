<Window x:Class="PharmacySystemClient.Loginwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmacySystemClient"
        mc:Ignorable="d"
        Title="Loginwindow" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="156*"/>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="19*"/>
            <ColumnDefinition Width="106*"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="UsernameLabel" Grid.Column="1" HorizontalAlignment="Left" Height="19.48" Margin="0,87.286,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" Width="77.455" Grid.ColumnSpan="3"/>
        <TextBox x:Name="UsernameTextField" Grid.Column="3" HorizontalAlignment="Left" Height="19.48" Margin="46.143,87.286,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46.753"/>
        <TextBlock x:Name="PasswordLabel" Grid.Column="1" HorizontalAlignment="Left" Height="19.48" Margin="0,128.844,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" Width="77.455" Grid.ColumnSpan="3"/>
        <PasswordBox x:Name="PasswordField" Grid.Column="3" HorizontalAlignment="Left" Height="19.48" Margin="46.143,128.844,0,0" VerticalAlignment="Top" Width="46.753"/>
        <Button Grid.ColumnSpan="2" Content="Login" HorizontalAlignment="Left" Height="19" Margin="99,170,0,0" VerticalAlignment="Top" Width="68" Click="Button_Click"/>
    </Grid>
</Window>
